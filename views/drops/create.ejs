  
<div class="container mt-4">
    <h2>创建新物品模板及掉落</h2>
    
    <form method="POST" action="/drops/create">
        <!-- 新增物品模板字段 -->
        <div class="form-group">
            <label>物品名称</label>
            <input type="text" name="item_name" class="form-control" required>
        </div>
        <div class="form-group">
            <label>物品类型</label>
            <select name="type" class="form-control" required>
                <option value="武器">武器</option>
                <option value="防具">防具</option>
                <option value="饰品">饰品</option>
                <option value="消耗品">消耗品</option>
            </select>
        </div>
        <div class="form-group">
            <label>稀有度</label>
            <select name="rarity" class="form-control" required>
                <option value="白色">白色</option>
                <option value="绿色">绿色</option>
                <option value="蓝色">蓝色</option>
                <option value="紫色">紫色</option>
                <option value="橙色">橙色</option>
            </select>
        </div>

        <!-- 原掉落表字段 -->
        
        <div class="form-group">
            <label>掉落率(%)</label>
            <input type="number" name="drop_rate" class="form-control" min="0" max="100" required>
        </div>
        <div class="form-group form-check">
            <input type="checkbox" name="is_bind" class="form-check-input" id="isBind" value="1">
            <label class="form-check-label" for="isBind">是否为主线物品</label>
        </div>
        <button type="submit" class="btn btn-primary">提交</button>
        <a href="/drops" class="btn btn-secondary">取消</a>
    </form>
</div>
  